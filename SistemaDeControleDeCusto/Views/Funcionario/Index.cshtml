@using SistemaDeControleDeCusto.Models
@model  SistemaDeControleDeCusto.ViewModel.FuncionarioViewModel 

@{
    ViewBag.Title = "Funcionarios";
}

<div style="padding-top: 10px" class="row">
    <div class="panel panel-default">
        <div class="panel-heading text-right">
            <span type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modalFuncionario">Novo</span>
        </div>
        <div style="padding-top: 0;" class="panel-body text-center">
            <div class="row">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <td class="text-center col-sm-2"><strong>ID</strong></td>
                        <td class="text-center col-sm-4"><strong>Nome</strong></td>
                        <td class="text-center col-sm-6"><strong>Departamentos</strong></td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var funcionario in Model.Funcionarios)
                    {
                        <tr>
                            <td class="text-center">@funcionario.ID</td>
                            <td class="text-center">@funcionario.Nome</td>
                            <td class="text-center">@funcionario.DepartamentosFormatados</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@{
    @Html.Partial("_ModalFuncionario", new Funcionario())
}