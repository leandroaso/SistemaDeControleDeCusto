@model SistemaDeControleDeCusto.Models.Departamento

<div class="modal fade" id="modalDepartamento" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Novo", "Departamento", FormMethod.Post))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Cadastro de departamento</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(b => b.Nome)
                        @Html.TextBoxFor(b => b.Nome, new { @class = "form-control", @maxlength = "100", @required = "required" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary" >Salvar</button>
                </div>
            }
        </div>
    </div>
</div>